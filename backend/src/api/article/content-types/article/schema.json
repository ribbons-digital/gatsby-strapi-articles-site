{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "environment": {
      "type": "string",
      "required": true
    },
    "industry": {
      "type": "enumeration",
      "enum": [
        "marketing",
        "technology",
        "finance",
        "advertising",
        "drones and robotics"
      ]
    },
    "vertical": {
      "type": "enumeration",
      "enum": [
        "contact center",
        "financial services",
        "government",
        "healthcare",
        "manufacturing",
        "non-profit",
        "professional services",
        "retail"
      ]
    }
  }
}
